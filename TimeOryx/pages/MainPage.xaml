<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:TimeOryx;assembly=TimeOryx"
             x:Class="TimeOryx.MainPage" 
             
             BackgroundColor="#7b7b7b">
    
    <FlyoutItem Title="Календарь">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate views:CalendarPage}"></ShellContent>
        </Tab>
    </FlyoutItem>

    <FlyoutItem Title="Список дел">
        <Tab>
        <ShellContent x:Name="ToDo" ContentTemplate="{DataTemplate views:TodoListPage}">
           
        </ShellContent>
        </Tab>
        
    </FlyoutItem>
    <FlyoutItem Title="Список целей">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate views:QuestsPage}">
           
            </ShellContent>
        </Tab>
        
    </FlyoutItem>

    <FlyoutItem Title="Достижения [WIP]">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate views:Achievements}">

            </ShellContent>
        </Tab>

    </FlyoutItem>

    <FlyoutItem Title="Настройки [WIP]">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate views:Options}">

            </ShellContent>
        </Tab>

    </FlyoutItem>

</Shell>
